    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "prettier/prettier": ["error", {
        "endOfLine":"auto"
    }],
    "prettier.disableLanguages": ["html"],
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 2
            },
            "excludeFiles": "*.min.css"
        }
